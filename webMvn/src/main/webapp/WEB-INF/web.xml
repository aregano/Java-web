<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>HolaServlet</servlet-name>
  	<display-name>HolaServlet</display-name>
  	<description></description>
  	<servlet-class>com.alvaro.controllers.HolaServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<display-name>HelloServlet</display-name>
  	<description></description>
  	<servlet-class>com.alvaro.controllers.HelloServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CacServlet</servlet-name>
  	<display-name>CacServlet</display-name>
  	<description></description>
  	<servlet-class>com.alvaro.controllers.CacServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HolaServlet</servlet-name>
  	<url-pattern>/hola</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
